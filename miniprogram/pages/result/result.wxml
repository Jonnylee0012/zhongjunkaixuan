<!--pages/result/result.wxml-->
<view class="result">
  <view class="result-img-box">
    <!-- <image wx:if="{{resultState == 'done'}}" mode="widthFix" src="/images/icon-review-success.png" class="result-img"></image>
    <image wx:if="{{resultState == 'done'}}" mode="widthFix" src="/images/icon-review-fail.png" class="result-img"></image> -->
    <image wx:if="{{resultState == 'ing'}}" mode="widthFix" src="{{resultIcon}}" class="result-img"></image>
  </view>
  <text class="result-des">{{resultDes}}</text>

  <!-- 如果是失败状态, 展示失败原因以及重新认证按钮--目前用的“ing”状态代替”失败状态查看效果“,  -->
  <text wx:if="{{resultState == 'failed'}}" class="result-reason">{{failedReason}}</text>
  <button wx:if="{{resultState == 'failed'}}" class="result-again-btn" bindtap="pageToAu">重新认证</button>


</view>