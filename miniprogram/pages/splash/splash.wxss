  width: 100vw;
  height: 100vh;

}
.swiper-item{
  width: 100vw;
  height: 100vh;
}
.splash-swiper{
  width: 100vw;
  height: 100vh;
  position: relative;

}
.swiper-item-img{
  display: block;
  width: 100%;
  height: 100%;
  object-fit: fill;
}
.swiper-item-img-point{

  position: relative;
  z-index: 10;
  bottom: 10vh;
  text-align: center;
  color: #fff;
}
.swiper-item-img-point-icon{
  width: 40rpx;
  
}