            <view class="home-second-content-con-item-left-des">这里是描述啊</view>
          </view>
          <view class="home-second-content-con-item-right">
            <!-- <view class="home-second-content-con-item-right-img-box"> -->
            <image class="home-second-content-con-item-right-img" mode="widthFix" src="/images/bg-home-middle-3.png"></image>
            <!-- </view> -->
          </view>
        </view>
      </view>

    </view>
  </view>
</view>