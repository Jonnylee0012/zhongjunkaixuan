/* pages/authenticate/authenticate.wxss */
.authenticate-box {
  width: 100vw;
  min-height: 100vh;
  box-sizing: border-box;
  background: rgb(249, 249, 249);
  padding: 30rpx 20rpx;
}

.authenticate-title {
  font-size: 30rpx;
  margin-top: 15rpx;
  display: block;
}

.title2 {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.authenticate-image-box {
  background: rgb(240, 240, 240);
  border-radius: 10rpx;
  margin-top: 30rpx;
  display: flex;
  padding: 15rpx;
  padding-bottom: 20rpx;
}

.authenticate-image-left {
  width: 45%;
  padding: 20rpx;

}

.authenticate-image-left-title {
  display: inline-block;
  width: 100%;
  font-size: 30rpx;
}

.authenticate-image-left-tip {
  font-size: 25rpx;
  color: rgb(151, 151, 151);
}

.authenticate-image-right {
  width: 55%;
  padding-right: 20rpx;
  display: block;
  justify-content: right;
}

.authenticate-image-right-img {
  width: 100%;
  height: 230rpx;
  display: block;
  margin-right: 15rpx;
}

.authenticate-info-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid rgb(199, 199, 199);
  margin-bottom: 1rpx;
}

.authenticate-info-label {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 300;
  margin-right: 20rpx;

}

.authenticate-info-input {
  flex: 1;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  color: rgb(159, 159, 159);
  text-align: right;
  display: flex;
  align-items:flex-end;
  justify-content: flex-end;
}

.authenticate-sub-btn {
  width: 100%;
  height: 80rpx;
  background: rgb(188, 51, 57);
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  margin-bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}